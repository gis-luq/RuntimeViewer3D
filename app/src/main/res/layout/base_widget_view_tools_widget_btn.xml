<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/base_widget_view_tools_widget_btn_lnbtnWidget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/base_widget_view_tools_widget_btn_imgWidgetToolIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/widget_default_tools2" />

        <TextView
            android:id="@+id/base_widget_view_tools_widget_btn_txtWidgetToolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地图"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
